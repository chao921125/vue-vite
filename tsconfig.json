{
	/* Visit https://aka.ms/tsconfig.json to read more about this file https://www.tslang.cn/docs/handbook/tsconfig-json.html */
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "./types",
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": false,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"ES5",
			"ES6",
			"ES7",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ES2021",
			"ES2022",
			"ES2023",
			"ESNext",
			"DOM",
			"DOM.Iterable",
			"ScriptHost",
			"Decorators"
		],
		"listEmittedFiles": true,
		"listFiles": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,
		"noLib": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "./",
		"outDir": "./dist",
		"paths": {
			"@/*": [
				"src/*"
			],
			"/@/*": ["src/*"],
			"/#/*": ["class/*"]
		},
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"strictFunctionTypes": false,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"types": [
			"vite/client",
			"vite-plugin-pwa/client"
		]
	},
	"plugins": [],
	"include": [
		"src/**/*",
		"types/**/*",
		"build/**/*",
		"mock/**/*",
		"auto-imports.d.ts",
		"components.d.ts"
	],
	"exclude": [
		"**/*.js",
		"node_modules",
		"dist",
		"tests"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
