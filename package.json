{
	"name": "vue-vite",
	"version": "4.0.1",
	"description": "vue-vite",
	"keywords": [
		"vue, vue2, vu3",
		"vite",
		"vue-router",
		"pina",
		"admin"
	],
	"homepage": "https://github.com/chao921125/vue-vite",
	"repository": {
		"type": "git",
		"url": "https://github.com/chao921125/vue-vite"
	},
	"bugs": {
		"url": "https://github.com/chao921125/vue-vite/issues"
	},
	"author": {
		"name": "chao921125",
		"email": "chao921125@sina.com",
		"url": "https://github.com/chao921125"
	},
	"license": "BSD-3-Clause",
	"main": "index.html",
	"type": "module",
	"private": true,
	"scripts": {
		"review": "npm run build && npm run dev",
		"serve": "npm run dev",
		"dev": "vite --host --open --mode development",
		"test": "vite --host --open --mode preview",
		"prod": "vite --host --open --mode production",
		"build": "npm run build:prod",
		"build:test": "vite build --mode preview",
		"build:prod": "vite build --mode production",
		"build:no-cache": "npm clean:cache && npm run build",
		"clean:cache": "rimraf yarn.lock && rimraf package.lock.json && rimraf pnpm-lock.yaml && rimraf node_modules && pnpm install",
		"clean:lib": "rimraf node_modules",
		"lint": "npm run lint:eslint",
		"lint:eslint": "eslint --config eslint.config.mjs \"./**/*.{js,ts,mjs,mts,cjs,cts,jsx,tsx,css,less,scss,vue,html}\"",
		"lint:prettier": "prettier --write --fix --loglevel warn \"./**/*.{js,ts,mjs,mts,cjs,cts,json,jsx,tsx,css,less,scss,vue,html}\"",
		"lint:lint-staged": "lint-staged",
		"lint:stylelint": "stylelint --cache --fix \"src/**/*.{vue,css,less,scss,postcss}\"",
		"prepare": "husky",
		"commitlint": "commitlint --config .commitlintrc.mjs -e -V",
		"prepack": "npmignore --auto",
		"test:br": "http-server dist --cors --brotli -c-1",
		"test:gzip": "http-server dist --cors --gzip -c-1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"dependencies": {
		"@element-plus/icons-vue": "^2.3.1",
		"@vueuse/components": "^11.1.0",
		"@vueuse/core": "^10.11.1",
		"@vueuse/integrations": "^11.1.0",
		"@vueuse/metadata": "^11.1.0",
		"@vueuse/shared": "^11.1.0",
		"animate.css": "^4.1.1",
		"axios": "^1.7.7",
		"axios-mock-adapter": "^2.0.0",
		"core-js": "^3.38.1",
		"dayjs": "^1.11.13",
		"echarts": "^5.5.1",
		"echarts-gl": "^2.0.9",
		"echarts-wordcloud": "^2.1.0",
		"element-plus": "^2.8.3",
		"heic2any": "^0.0.4",
		"js-cookie": "^3.0.5",
		"mitt": "^3.0.1",
		"nprogress": "^0.2.0",
		"pinia": "^2.2.2",
		"qs": "^6.13.0",
		"vue": "^3.5.6",
		"vue-i18n": "^9.14.0",
		"vue-router": "^4.4.5",
		"vuetify": "^3.7.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@commitlint/format": "^19.5.0",
		"@commitlint/types": "^19.5.0",
		"@eslint/js": "^9.10.0",
		"@rollup/plugin-commonjs": "^26.0.1",
		"@types/echarts": "^4.9.22",
		"@types/node": "^20.16.5",
		"@types/qs": "^6.9.16",
		"@vitejs/plugin-legacy": "^5.4.2",
		"@vitejs/plugin-vue": "^5.1.4",
		"@vue/compiler-sfc": "^3.5.6",
		"autoprefixer": "^10.4.20",
		"browserslist": "^4.23.3",
		"conventional-changelog-conventionalcommits": "^8.0.0",
		"esbuild": "^0.23.1",
		"eslint": "^9.10.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-vue": "^9.28.0",
		"globals": "^15.9.0",
		"http-server": "^14.1.1",
		"husky": "^9.1.6",
		"less": "^4.2.0",
		"less-loader": "^12.2.0",
		"lint-staged": "^15.2.10",
		"postcss": "^8.4.47",
		"postcss-html": "^1.7.0",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"rollup-plugin-visualizer": "^5.12.0",
		"sass": "^1.79.1",
		"sass-loader": "^16.0.1",
		"stylelint": "^16.9.0",
		"stylelint-config-recommended": "^14.0.1",
		"stylelint-config-recommended-scss": "^14.1.0",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"stylelint-order": "^6.0.4",
		"stylelint-prettier": "^5.0.2",
		"stylelint-scss": "^6.6.0",
		"terser": "^5.33.0",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.6.0",
		"unplugin-auto-import": "^0.18.3",
		"unplugin-icons": "^0.19.3",
		"unplugin-vue-components": "^0.27.4",
		"unplugin-vue-define-options": "^1.5.1",
		"vite": "^5.4.6",
		"vite-plugin-cdn-import": "^1.0.1",
		"vite-plugin-checker": "^0.7.2",
		"vite-plugin-compression2": "^1.3.0",
		"vite-plugin-ejs": "^1.7.0",
		"vite-plugin-full-reload": "^1.2.0",
		"vite-plugin-pwa": "^0.20.5",
		"vite-plugin-vuetify": "^2.0.4",
		"vite-svg-loader": "^5.1.0",
		"vue-tsc": "^2.1.6"
	},
	"peerDependencies": {
		"mysql2": ">=3.3.2"
	},
	"overrides": {
		"mysql": "2.18.1"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=6.14.18",
		"pnpm": ">=6.20.0",
		"yarn": ">=3.0.0"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.css": "stylelint --fix"
	},
	"browserslist": [
		"defaults",
		"> 1%",
		"not dead",
		"not op_mini all",
		"last 2 versions",
		"Chrome > 51",
		"Edge > 15",
		"Firefox > 54",
		"Safari > 10",
		"not IE <= 11",
		"Android >= 6.0",
		"iOS > 10",
		"supports es6-module"
	]
}
